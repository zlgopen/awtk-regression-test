<view>
  <style name="grid" children_layout="default(r=2, c=2, s=5, m=5)">
    <normal     bg_color="#a0a0a0" />
  </style>
</view>

<button>
  <style name="close" border_color="#a0a0a0"  text_color="black" self_layout="default(x=c,y=b:10,w=25%,h=30)">
    <normal     bg_color="#f0f0f0" />
    <pressed    bg_color="#c0c0c0" x_offset="1" y_offset="1"/>
    <over       bg_color="#e0e0e0" />
    <focused    bg_color="#e0e0e0" />
    <disable    bg_color="gray" text_color="#d0d0d0" />
  </style>
  <style name="focusable" border_color="#a0a0a0"  text_color="black" focusable="true">
    <normal     bg_color="#f0f0f0" />
    <pressed    bg_color="#c0c0c0" x_offset="1" y_offset="1"/>
    <over       bg_color="#e0e0e0" />
    <focused    bg_color="#e0e0e0" />
    <disable    bg_color="gray" text_color="#d0d0d0" />
  </style>
  <style name="feedback" border_color="#a0a0a0"  text_color="black" feedback="true" focusable="true">
    <normal     bg_color="#f0f0f0" />
    <pressed    bg_color="#c0c0c0" x_offset="1" y_offset="1"/>
    <over       bg_color="#e0e0e0" />
    <focused    bg_color="#e0e0e0" />
    <disable    bg_color="gray" text_color="#d0d0d0" />
  </style>
</button>
