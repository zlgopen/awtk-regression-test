<dialog x="c" y="m" w="80%" h="160" text="Dialog" highlight="default(alpha=80)">
  <dialog_title x="0" y="0" w="100%" h="30" text="Hello AWTK" >
    <draggable drag_window="true"/>
  </dialog_title>

  <dialog_client x="0" y="bottom" w="100%" h="-30">
    <label name="status" x="center" y="middle:-20" w="200" h="30" text="status"/>
    <button name="new" x="10" y="bottom:10" w="40%" h="30" text="New" focusable="true" focused="true"/>
    <button name="close" x="right:10" y="bottom:10" w="40%" h="30" text="Close" focusable="true"/>
  </dialog_client>
</dialog>
