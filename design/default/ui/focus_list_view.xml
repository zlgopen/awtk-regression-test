        <label text="text 4" />
      </list_item>
      <list_item name="l5" w="100%" focusable="true" children_layout="default(r=1,c=1)">
        <label  text="text 5" />
      </list_item>
      <list_item name="l6" w="100%" focusable="true" children_layout="default(r=1,c=1)">
        <label text="text 6" />
      </list_item>
      <list_item name="l7" w="100%" focusable="true" children_layout="default(r=1,c=1)">
