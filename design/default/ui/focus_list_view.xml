        <label text="text 12" />
      </list_item>
    </scroll_view>
    <scroll_bar_d name="bar" x="right" y="0" w="12" h="100%" value="0"/>
  </list_view>

  <label name="status" x="0" y="bottom:40" w="100%" h="30" text="status"/>

  <button name="first" x="10" y="bottom:10" w="25%" h="30" text="first"/>
  <button name="close" x="center" y="bottom:10" w="25%" h="30" text="close" on:click="back()"/>
  <button name="last" x="right:10" y="bottom:10" w="25%" h="30" text="last"/>
</window>
