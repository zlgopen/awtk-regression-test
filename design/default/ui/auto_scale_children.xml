<window text="Auto Scale Children" design_w="160" design_h="225" 
  auto_scale_children_x="true" auto_scale_children_y="true" auto_scale_children_w="true" auto_scale_children_h="false">

  <button name="apply" focusable="true" focused="true"  text="Apply" x="10" y="20" w="60" h="30"/>
  <check_button name="x" focusable="true" text="x" x="10" y="60" w="60" h="30"/>
  <check_button name="y" focusable="true" text="y" x="10" y="100" w="60" h="30"/>
  <check_button name="w" focusable="true" text="w" x="80" y="60" w="60" h="30"/>
  <check_button name="h" focusable="true" text="h" x="80" y="100" w="60" h="30"/>

  <button focusable="true" x="c" y="b:10" w="128" h="30" text="close" on:click="back()"/>
</window>
